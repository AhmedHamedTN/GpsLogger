<?xml version="1.0" encoding="utf-8"?>
    
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

     <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/andBlue"
                android:endColor="@color/btgrey"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/andBlue" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item android:state_enabled="false" >
       	<shape>
            <gradient
                android:startColor="@color/dkgrey"
                android:endColor="@color/bgStats"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/ltgrey" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item android:state_checked="true" >
        <shape>
            <gradient
                android:startColor="@color/andBlue"
                android:endColor="@color/dkgrey"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/andBlue" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item android:state_checked="false" >        
        <shape>
            <gradient
                android:startColor="@color/ltgrey"
                android:endColor="@color/btgrey"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/btgrey" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    
    
</selector>